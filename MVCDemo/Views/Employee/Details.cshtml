@model MVCDemo.Models.Employee

@{
    ViewBag.Title = "Employee Information";
}

<h2>Employee Information</h2>

<table style="font-family:Arial">
    <tr>
        <td> Employee Id</td>
        <td> @Model.EmployeeId</td>
    </tr>
    <tr>
        <td> Employee Name</td>
        <td> @Model.Name</td>
    </tr>
    <tr>
        <td> Employee Gender</td>
        <td> @Model.Gender</td>
    </tr>
    <tr>
        <td> Employee City</td>
        <td> @Model.City</td>
    </tr>
</table>

@Html.ActionLink("Back To Department List","Index",new { departmentId = Model.DepartmentId})
